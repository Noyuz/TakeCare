      <%= link_to contract_path(@contracts) do %>
        <div class="card-product">
          <%= cl_image_path @contract.photo.url(@contract.photo) %>
          <div class="card-product-infos">
            <ul>
              <li>
                <h2> <%= contract.nickname %> </h2> <!--Ben-->
                <p>#####CRIPTED######</p>
                <p>#####CRIPTED######</p>
              </li>
              <%#= link_to "See your Selection !", contract_path(contract) %>
            <% end %>
            </ul>
          </div>
        </div>
    </div>
  <% end %>
</div>
