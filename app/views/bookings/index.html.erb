<body class="container-bookings-show">
  <div class="show-wrapper" style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0)), url(https://images.pexels.com/photos/479444/pexels-photo-479444.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260)">
      <h1 class="booking-title">Your Dashboard</h1>

      <ul class="bookings">
        <% @bookings.each do |booking| %>
        <li><%= "#{booking.title} : #{booking.description}" %></li>
          <%= link_to 'edit', edit_booking_path(booking) %>
          <%= link_to 'delete', booking_path(booking),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
        <% end %>
      </ul>
  <%= link_to "Whant more ?", contracts_path(@contracts) %>
  </div>
</body>
